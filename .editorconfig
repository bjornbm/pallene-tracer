# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[spec/translator_spec.lua]
trim_trailing_whitespace = false

[*.md]
max_line_length = off

[{Makefile,makefile}]
indent_style = tab
indent_size = 8

[COMMIT_EDITMSG]
max_line_length=72
